<div class="container sign_up_form">
  <div class="container-fluid">
    <div class="tech-slideshow">
    <div class="mover-1"></div>
    <div class="mover-2"></div>
  </div>
  <div class="sign_up">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <p>What's the best e-mail address to contact you by?</p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <p>Your Movement Match Password</p>
      <% if @minimum_password_length %>
      <small>(<%= @minimum_password_length %> characters minimum)</small>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Sign up", type:"button", class:"btn btn-outline-warning text-dark btn-lg btn-block"  %>
    </div>
  <br>
    <% end %>

    <%= render "devise/shared/links" %>
    <%= link_to 'Back', root_path, class:"btn btn-outline-danger text-dark btn-lg btn-block" %>
  </div>
</div>
